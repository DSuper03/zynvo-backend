                  "FounderEmail": {"type": "string"},
                  "clubContact": {"type": "string"},
                  "requirements": {"type": "string"},
                  "facultyEmail": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Club created successfully"
          }
        }
